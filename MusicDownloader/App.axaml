<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             x:Class="MusicDownloader.App"
             RequestedThemeVariant="Dark"> <!-- App supports only dark theme -->
  <Application.Styles>
    <FluentTheme />
    <dialogHostAvalonia:DialogHostStyles />
    <StyleInclude
      Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
    <StyleInclude Source="/Styles/BorderStyles.axaml" />
  </Application.Styles>
  <Application.Resources>
    <SolidColorBrush x:Key="AppBackgroundColor">#212529</SolidColorBrush>
  </Application.Resources>
</Application>
